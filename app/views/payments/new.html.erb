<%= render 'layouts/navbar', title: 'New Transaction', back_url: group_payments_path, logout: true %>
<div class="add-form">
  <%= form_with model: @group, url: group_payments_path do |f| %>
  <div class="input-wrapper">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: 'Enter name of transaction', class: "form-field"%>
  </div>
  <div class="input-wrapper">
    <%= f.label :amount %>
    <%= f.number_field :amount, required: true, placeholder: 'Transaction Amount ', class: "form-field"%>
  </div>
  <div><%= f.submit 'Add Transaction' ,class: 'add-submit btn-primary'%></div>
  <% end %>
</div>
